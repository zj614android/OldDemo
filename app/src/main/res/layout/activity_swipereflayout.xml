    <TextView
        android:id="@+id/sw_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="SwTv" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/sw_test"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ListView
            android:id="@+id/sw_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </ListView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>